extends layout 

block content 

    if currentUser

        h1.simp Recent Messages

        if messages
            .messages
                a(href='/messages/create').btn.add New Message
                each message in messages 
                    .message 
                        .text #{message.text}
                        hr
                        .info
                            .sender Posted by #[a(href=message.sender.url) #{message.sender.username}]
                            .time #{message.timestamp_formatted}

        else 
            a(href='/messages/create').btn.add New Message
            p There are no messages yet.

    else 

        h1 Outcast 
        p Only members can view this page