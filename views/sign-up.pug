extends layout 

block content

    if worthy 

        h1= title

        form(action='/members/sign-up' method='POST')
            label(for='first_name') First Name:
            input(name='first_name' placeholder='First Name' type='text' value=(user===undefined ? '' : user.first_name))
            label(for='last_name') Last Name:
            input(name='last_name' placeholder='Last Name' type='text' value=(user===undefined ? '' : user.last_name))
            label(for='username') Username:
            input(name='username' placeholder='username' type='text' value=defaultUser)
            label(for='password') Password:
            input(name='password' type='password')
            label(for='passwordConfirm') Confirm Password:
            input(name='passwordConfirm' type='password')
            button(type='submit') Sign Up

        if errors 
            ul 
            each error in errors 
                li= error.msg
        if error 
            p= error

    else 
        h1 Outcast 
        p You are not worthy enough to become a member.